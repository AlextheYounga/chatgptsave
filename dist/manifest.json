{
	"manifest_version": 3,
	"name": "ChatGPT Save",
	"description": "Save conversations in Markdown or JSON from the ChatGPT web UI.",
	"version": "0.1.2",
	"action": {
		"default_title": "ChatGPT Save",
		"default_icon": {
			"16": "icons/icon16.png",
			"32": "icons/icon32.png"
		}
	},
	"icons": {
		"16": "icons/icon16.png",
		"48": "icons/icon48.png",
		"128": "icons/icon128.png"
	},
	"permissions": [
		"downloads"
	],
	"background": {
		"service_worker": "background.js",
		"type": "module"
	},
	"content_scripts": [
		{
			"matches": [
				"https://chatgpt.com/*"
			],
			"js": [
				"content-script.js"
			],
			"run_at": "document_idle"
		}
	],
	"host_permissions": [
		"https://chatgpt.com/*"
	]
}